<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/bgrd"
    tools:context="com.example.varun.wardrobe.AboutUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_gravity="center"
            android:src="@drawable/logo5"
            app:civ_border_width="2dp" />
        <TextView
            android:id="@+id/aboutUsHead"
            android:textColor="#1113AF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="40dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"

            android:textColor="#000000"
            android:text="@string/about_us_para"
            android:id="@+id/textView2" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disclaimer"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#1113AF"
            android:textSize="20dp"
            android:id="@+id/disclaimer_id"
            />

        <TextView
            android:id="@+id/textView3"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:textStyle="italic"
            android:textColor="#020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/disclaimer_para"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developers"
            android:textSize="25sp"
            android:textColor="#1113AF"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/developers_id"/>
        <TextView
            android:id="@+id/varun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Varun Gaba"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="italic"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tushar"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tushar Chauhan"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_gravity="center"/>
        <TextView
            android:textColor="#000000"
            android:id="@+id/yugal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yugal Dahiya"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>