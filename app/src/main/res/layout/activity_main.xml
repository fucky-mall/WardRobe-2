<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgrd"
    tools:context="com.example.shivani.miete.MainActivity">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="211dp"
        android:layout_height="173dp"
        android:layout_gravity="center"
        android:src="@drawable/logo5"
        app:civ_border_width="2dp" />

    
    <TextView
        android:id="@+id/text_miete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WardRobe"
        android:textColor="#673AB7"
        android:textSize="50dp"
        android:layout_gravity="center" />
    
   
    <TextView
        android:id="@+id/text_closet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Digital Closet"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="#673AB7" />
   <Space
       android:layout_width="wrap_content"
       android:layout_height="1dp"
       android:layout_weight="1"/>

    <Button
        android:id="@+id/button_olduser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@null"
        android:onClick="onAlreadyAnUserClick"
        android:text="Log In"

        android:textAllCaps="false"
        android:textColor="#020202"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button_newuser"
        android:onClick="onNewUserClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:textAllCaps="false"
        android:background="@null"
        android:textSize="40dp"
        android:layout_margin="5dp"
        android:textColor="#000000"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/skip"
        android:onClick="onSkipClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Skip>>"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:background="@null"
        android:textColor="#fff"
        />
</LinearLayout>
